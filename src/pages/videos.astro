---
import BaseLayout from '../layouts/BaseLayout.astro';
import VideoLocal from '../components/VideoLocal.astro';
---

<BaseLayout title="视频">
  <div class="container videos-page">
    <h1>视频</h1>
    <div class="gold-line"></div>
    <p class="videos-desc">概念影像与幕后制作。</p>

    <div class="video-grid">
      <VideoLocal src="/videos/海图之外_概念片_web.mp4" title="海图之外 · 概念片" />
      <VideoLocal src="/videos/海图之外_这只猫不是宠物_web.mp4" title="这只猫不是宠物" />
    </div>
  </div>
</BaseLayout>

<style>
  .videos-page {
    padding: 3rem 1.5rem 4rem;
    max-width: 900px;
  }
  .videos-desc {
    color: var(--text-muted);
    margin: 0.5rem 0 2rem;
  }
  .video-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: 1.5rem;
  }
  @media (max-width: 640px) {
    .video-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
