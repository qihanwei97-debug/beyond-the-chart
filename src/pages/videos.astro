---
import BaseLayout from '../layouts/BaseLayout.astro';
import VideoEmbed from '../components/VideoEmbed.astro';
---

<BaseLayout title="视频">
  <div class="container videos-page">
    <h1>视频</h1>
    <div class="gold-line"></div>
    <p class="videos-desc">概念影像与幕后制作。</p>

    <div class="video-grid">
      <VideoEmbed bvid="PLACEHOLDER_1" title="海图之外 · 概念片" />
      <VideoEmbed bvid="PLACEHOLDER_2" title="这只猫不是宠物" />
    </div>

    <p class="videos-note">视频上传B站后，替换此处的BV号即可嵌入播放。</p>
  </div>
</BaseLayout>

<style>
  .videos-page {
    padding: 3rem 1.5rem 4rem;
    max-width: 900px;
  }
  .videos-desc {
    color: var(--text-muted);
    margin: 0.5rem 0 2rem;
  }
  .video-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: 1.5rem;
  }
  .videos-note {
    text-align: center;
    color: var(--text-muted);
    font-size: 0.85rem;
    margin-top: 2rem;
  }
  @media (max-width: 640px) {
    .video-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
